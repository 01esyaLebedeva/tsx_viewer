{
  "name": "tsx-view-edit",
  "version": "1.0.5",
  "type": "module",
  "main": "electron/main.js",
  "description": "TSX view/edit application built with Electron and Vite.",
  "author": {
    "name": "Olesya Lebedeva",
    "email": "olesya.andreevna.lebedeva@gmail.com"
  },
  "license": "GPL-3.0-or-later",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "start": "electron .",
    "start:prod": "npm run build && npm run start"
  },
  "dependencies": {
    "@codesandbox/sandpack-react": "^2.20.0",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "lucide-react": "^0.536.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.6.1",
    "react-live": "^4.1.8",
    "react-resizable-panels": "^3.0.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.0",
    "electron": "^28.2.3",
    "electron-builder": "^24.6.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.2.2",
    "vite": "^7.0.0"
  },
  "build": {
    "appId": "io.github.OlesyaLebedeva.tsx_viewer",
    "files": [
      "dist/**",
      "electron/**",
      "package.json",
      "!node_modules/**/.cache",
      "node_modules/**"
    ],
    "linux": {
      "desktop": "src/tsx_viewer.desktop",
      "category": "Utility;Development;Viewer;",
      "icon": "src/icons/tsx_viewer.png",
      "target": [
        "snap",
        "AppImage",
        "deb",
        "pacman"
      ]
    },
    "win": {
      "icon": "src/icons/tsx_viewer.ico"
    }
  }
}
