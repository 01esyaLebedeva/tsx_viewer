{
    "mcpServers": {
      "context7": {
        "command": "npx",
        "args": [
          "-y",
          "@upstash/context7-mcp"
        ],
        "env": {
          "DEFAULT_MINIMUM_TOKENS": ""
        },
        "alwaysAllow": [
          "get-library-docs",
          "resolve-library-id"
        ]
      },
      "github": {
        "command": "docker",
        "args": [
          "run",
          "-i",
          "--rm",
          "-e",
          "GITHUB_PERSONAL_ACCESS_TOKEN",
          "-e",
          "GITHUB_TOOLSETS",
          "-e",
          "GITHUB_READ_ONLY",
          "ghcr.io/github/github-mcp-server"
        ],
        "env": {
          "GITHUB_PERSONAL_ACCESS_TOKEN": "",
          "GITHUB_TOOLSETS": "",
          "GITHUB_READ_ONLY": ""
        }
      },
      "filesystem": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-filesystem",
          "/home/olesya/Документы/projects/tsx_viewer"
        ],
        "alwaysAllow": [
          "read_file",
          "read_multiple_files",
          "list_allowed_directories",
          "write_file",
          "get_file_info",
          "search_files",
          "move_file",
          "directory_tree",
          "list_directory_with_sizes",
          "edit_file",
          "create_directory",
          "list_directory"
        ]
      },
      "puppeteer": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-puppeteer"
        ],
        "alwaysAllow": [
          "puppeteer_navigate",
          "puppeteer_screenshot",
          "puppeteer_click",
          "puppeteer_evaluate",
          "puppeteer_select",
          "puppeteer_fill",
          "puppeteer_hover"
        ]
      }
    }
  }